@model Loja.Web.Models.ProdutoModel

@{
    ViewBag.Title = "Cadastrar";
}

@using (Html.BeginForm("Salvar","Produto", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "help is-danger" })
    @Html.HiddenFor(model => model.Id)

    @Html.LabelFor(model => model.Nome, new { @class = "label" })
    <div class="control">
        @Html.TextBoxFor(model => model.Nome, new { @class = "input", placeholder = "Nome do produto..." })
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "help is-danger" })
    </div>

    @Html.LabelFor(model => model.Valor, new { @class = "label" })
    <div class="control">
        @Html.TextBoxFor(model => model.Valor, new { @class = "input", placeholder = "Valor do produto..." })
        @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "help is-danger" })
    </div>

    <div class="control">
        <button class="button is-primary" type="submit">Cadastrar</button>
    </div>
}
