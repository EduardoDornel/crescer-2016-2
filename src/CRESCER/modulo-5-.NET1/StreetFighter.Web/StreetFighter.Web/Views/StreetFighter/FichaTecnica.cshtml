@model StreetFighter.Web.Models.FichaTecnicaModel

@{
    ViewBag.Title = "FichaTecnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="faixa">
        <strong>Ficha Técnica</strong>
    </div>
    <div>
        <h1>Blanka</h1> <br>
        <img style="float:left;" src="~/Content/Images/blanka.png" alt="Blanka" />
        <strong>Primeira aparição:</strong> @Model.PrimeiraAparicao<br>
        <strong>Nascimento:</strong> @Model.DataNascimento.ToString("dd/mm/yyyy")<br>
        <strong>Altura:</strong> @Model.Altura cm.<br>
        <strong>Peso:</strong> @Model.Peso kg.<br>
        <strong>Medidas:</strong> @Model.Medidas.<br>
        <strong>Tipo sanguíneo:</strong>@Model.TipoSanguineo.<br>
        <strong>Habilidades especiais:</strong> @Model.HabilidadesEspeciais.<br>
        <strong>Gosta: </strong>@Model.Gosta.<br>
        <strong>Desgosta:</strong>@Model.Desgosta.<br>
        <strong>Estilo de luta:</strong>@Model.EstiloDeLuta.<br>
        <strong>Origem:</strong>@Model.Origem.<br>
        <strong>Uma fala de vitória:</strong>@Model.FalaDeVitória<br>
        <strong>SSF2 nickname:</strong>@Model.SSF2Nickname.<br>
        <strong>SFA3 nickname:</strong>@Model.SFA3Nickname.<br>
        <strong>SF4 nickname:</strong>@Model.SF4Nickname.<br>
        <strong>SFA3 stage:</strong>@Model.SFA3Stage.
        <strong>SF2 stage:</strong>@Model.SF2Stage.<br>
        <strong>Golpes especiais famosos:</strong>@Model.GolpesEspeciais.<br>
    </div>
</div>
